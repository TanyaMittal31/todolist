<%- include("header") -%>
    
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
        <!-- <% for(var i=0;i<newItems.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p> <%= newItems[i].name %> </p>
            </div>
        <% } %> 
